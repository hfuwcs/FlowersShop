@model FlowersShop.Repository.Product

@{
    ViewBag.Title = "DetailProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Admin-LayoutPage.cshtml";
}

<h2>DetailProduct</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @if (Model.Image != null)
            {
                <img class="image" src="@Url.Content(Model.Image)" width="200" />
            }
            else
            {
                <span>No image available</span>
            }
        </dt>

        <dd>
            <image src="@Url.Content(Model.Image)" width="300" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt>
            Màu sắc
        </dt>
        @foreach (var item in Model.Color)
        {
            <dd>

                @Html.DisplayFor(model => item.Color_Name)

            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Object)
        </dt>
        @foreach (var item in Model.Object)
        {
            <dd>

                @Html.DisplayFor(model => item.Object_Name)

            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Occasion)
        </dt>
        @foreach (var item in Model.Occasion)
        {
            <dd>
                @Html.DisplayFor(model => item.Occasion_Name)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Presentation)
        </dt>
        @foreach (var item in Model.Presentation)
        {
            <dd>

                @Html.DisplayFor(model => item.Presentation_Name)

            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Product_ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
