@model FlowersShop.Repository.Product

<!-- Large Modal -->
@using (Ajax.BeginForm("EditProduct", "Product", FormMethod.Post,
                    new AjaxOptions
                    {
                        InsertionMode = InsertionMode.Replace,
                        HttpMethod = "POST",
                        UpdateTargetId = "EditModalContainer"
                    }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal fade" id="EditModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="EditModalLabel">Chỉnh sửa sản phẩm</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(model => model.Product_ID)
                    <div class="row">
                        <div class="col mb-3">
                            @Html.LabelFor(model => model.Name, "Tên sản phẩm", new { @class = "form-label" })
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-0">
                            @Html.LabelFor(model => model.Price,"Giá bán", htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-0">
                            @Html.LabelFor(model => model.Quantity,"Số lượng", htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row">
                        @Html.LabelFor(model => model.Description, "Mô tả sản phẩm", htmlAttributes: new { @class = "form-label" })
                        <div class="col mb-3">
                            @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control",  @cols = 80, @row = 10 } })
                        </div>
                    </div>
                    <div class="row g-2">
                        <div class="col mb-0">
                            <label class="form-label">Màu sắc</label>
                            @Html.DropDownListFor(model => model.Color, (IEnumerable<SelectListItem>)ViewBag.Color, "Chọn màu sắc của hoa", new { @class = "btn btn-outline-primary dropdown-toggle" })
                        </div>
                        <div class="col mb-0">
                            <label class="form-label">Đối tượng</label>
                            @Html.DropDownListFor(model => model.Object, (IEnumerable<SelectListItem>)ViewBag.Object, "Chọn đối tượng", new { @class = "btn btn-outline-primary dropdown-toggle" })
                        </div>
                    </div>
                    <div class="row g-2">
                        <div class="col mb-0">
                            <label class="form-label">Dịp</label>
                            @Html.DropDownListFor(model => model.Occasion, (IEnumerable<SelectListItem>)ViewBag.Occasion, "Chọn dịp", new { @class = "btn btn-outline-primary dropdown-toggle" })
                        </div>
                        <div class="col mb-0">
                            <label class="form-label">Hình thức trình bày</label>
                            @Html.DropDownListFor(model => model.Presentation, (IEnumerable<SelectListItem>)ViewBag.Presentation, "Chọn hình thức trình bày", new { @class = "btn btn-outline-primary dropdown-toggle" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="submit" class="btn btn-primary" id="edit-confirm">Save changes</button>
                </div>
            </div>
        </div>
    </div>
}
