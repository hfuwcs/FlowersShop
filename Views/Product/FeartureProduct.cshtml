@model IEnumerable<FlowersShop.Repository.Product>

<section id="spnoibat">
    <h2 style="text-align: center; margin-top: 50px;">SẢN PHẨM NỔI BẬT</h2>
    <div class="container py-5">
        <div class="row">
            @foreach(var item in Model)
            {
                <div class="col-md-3">
                    <div class="card shadow-0 border rounded-3 mb-4">
                        <div class="card-body text-center">
                            <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                @if (item.Image != null)
                                {
                                    <img src="@Url.Content(item.Image)" class="w-100" style="height: 200px; object-fit: cover; border-radius: 15px;" alt="Hình ảnh sản phẩm" />
                                }
                                else
                                {
                                    <span>No image available</span>
                                }
                            </div>
                            <h5 class="mt-3">@item.Name</h5>
                            <p class="text-truncate mb-2">
                                @item.Description
                            </p>
                            <div class="d-flex justify-content-center align-items-center mb-2">
                                <h6 class="mb-0">@item.Price</h6>
                                <span class="text-danger ms-2"><s>@(item.Price*1.25)</s></span>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-dark btn-sm me-2">Chi tiết</button>
                                <button class="btn btn-outline-dark btn-sm">Thêm vào giỏ</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
