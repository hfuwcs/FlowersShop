@model IEnumerable<FlowersShop.Repository.Product>

@{
    ViewBag.Title = "ShowProductAPITest";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h2>ShowProductAPITest</h2>

<button type="button" id="btnGetProduct">Get product</button>
<table class="table productTable">
    <tr>
        <th> Tên </th>
        <th>
            Giá
        </th>
        <th>
           Mô tả
        </th>
        <th>
            Ảnh
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Mã loại
        </th>
        <th></th>
    </tr>
</table>

<script>
    $('#btnGetProduct').click(() => {
        $.ajax({
            type: 'GET',
            url: '/api/product',
            success: (responses) => {
                for (var i = 0; i < responses.length; i++) {
                    const brandrRow = responses[i];
                    const strHTML = '<tr><td>' + brandrRow.ID + '</td><td>'+brandrRow.Name+'</td></tr>';
                    $('.productTable').append(strHTML);
                }
            },
            error: (err) => { console.log(err); }
        });
    });
</script>