@model FlowersShop.Repository.Users

@{
    ViewBag.Title = "FIREFLY STORE - ĐĂNG KÝ";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>Đăng Ký</title>*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Serif+Pro:400,600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/CSS/bootstrap.min.css" />
    <link rel="stylesheet" href="~/CSS/Style.css" />

    <style>

        .inner {
            padding: 20px;
            background: #fff;
            max-width: 850px;
            margin: auto;
            display: flex;
        }

            .inner .image-holder {
                width: 50%;
            }

            .inner form {
                width: 50%;
                padding-top: 36px;
                padding-left: 45px;
                padding-right: 45px;
            }

            .inner h3 {
                text-transform: uppercase;
                font-size: 25px;
                font-family: "Poppins-SemiBold";
                text-align: center;
                margin-bottom: 28px;
            }

        .form-group {
            display: flex;
        }

            .form-group input {
                width: 50%;
            }

                .form-group input:first-child {
                    margin-right: 25px;
                }

        .form-wrapper {
            position: relative;
        }

            .form-wrapper i {
                position: absolute;
                bottom: 9px;
                right: 0;
            }

        .form-control {
            border: 1px solid #333;
            border-top: none;
            border-right: none;
            border-left: none;
            display: block;
            width: 100%;
            height: 30px;
            padding: 0;
            margin-bottom: 25px;
        }

            .form-control::-webkit-input-placeholder {
                font-size: 13px;
                color: #333;
                font-family: "Poppins-Regular";
            }

            .form-control::-moz-placeholder {
                font-size: 13px;
                color: #333;
                font-family: "Poppins-Regular";
            }

            .form-control:-ms-input-placeholder {
                font-size: 13px;
                color: #333;
                font-family: "Poppins-Regular";
            }

            .form-control:-moz-placeholder {
                font-size: 13px;
                color: #333;
                font-family: "Poppins-Regular";
            }

        .wrapper {
            min-height: 100vh;
            background-size: cover;
            background-repeat: no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-wrapper {
            margin-bottom: 25px;
            position: relative;
        }

            .form-wrapper label {
                font-size: 30px;
                margin-bottom: 20px;
                display: block;
            }

        button {
            border: none;
            background: #007bff;
            color: #fff;
            padding: 10px 20px;
            font-size: 15px;
            border-radius: 4px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background 0.3s ease;
        }

            button:hover {
                background: #0056b3;
            }

            button i {
                margin-left: 10px;
            }

        .btn-outline-dark {
            width: 100%;
            height: auto;
        }

        .btn-dark:hover {
            background-color: #006160; /* Màu xanh nhạt khi hover */
            border-color: #006160;
        }

        .btn-outline-dark:hover {
            background-color: #006160; /* Màu xanh nhạt khi hover */
            border-color: #006160;
        }

        .inner {
            background: #fff;
            max-width: 850px;
            margin: auto;
            display: flex;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .inner .image-holder {
                width: 50%;
            }

                .inner .image-holder img {
                    border-top-left-radius: 10px;
                    border-bottom-left-radius: 10px;
                    width: 100%;
                    height: auto;
                }


        Thiết kế menu điều hướng (Navbar)
        #offcanvasNavbar {
            background-color: #335b92;
        }

        .nav-item {
            font-size: 40px; /* Kích thước font lớn cho các mục */
        }

        .nav-link {
            font-size: 18px; /* Kích thước font cho liên kết */
            color: #000000; /* Màu chữ đen */
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0); /* Nền màu đen mờ */
            transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu mượt mà */
        }
            /* Khi cuộn xuống, đổi màu nền và màu chữ */
            .navbar.scrolled {
                background-color: #141d2a !important;
            }

                .navbar.scrolled .nav-link,
                .navbar.scrolled .navbar-brand,
                .navbar.scrolled .fa-cart-shopping,
                .navbar.scrolled .fa-user .navbar.scrolled {
                    color: white !important;
                    opacity: 0.9;
                }

        .nav-item .nav-link {
            font-size: 20px; /* Kích thước chữ */
            color: black !important; /* Màu chữ mặc định */
            transition: all 0.3s ease; /* Hiệu ứng chuyển đổi mượt mà */
            text-decoration: none; /* Xóa gạch chân */
            padding: 10px 15px; /* Khoảng cách bên trong */
            border-radius: 10px; /* Bo góc cho mục */
        }

            .nav-item .nav-link:hover {
                color: white !important; /* Màu chữ khi hover */
                background-color: #006160; /* Màu nền khi hover */
                font-size: 22px; /* Tăng kích thước chữ khi hover */
                box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.2); /* Đổ bóng khi hover */
                text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3); /* Đổ bóng cho chữ */
                transition: all 0.3s ease; /* Hiệu ứng mượt mà */
            }

        .fixed-top {
            top: 0;
            width: 100%;
            z-index: 1030;
        }

        .fixed-logo {
            position: absolute;
            top: 10%;
            left: 10%;
            z-index: 10;
            color: white;
            text-shadow: 1px 1px 2px black;
        }

        .nav-btn {
            background-color: #ffffff;
            border: 2px solid #ccc;
            border-radius: 15px;
            margin: 5px;
            padding: 10px 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            font-size: 16px;
            color: #333;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            width: 160px; /* Responsive width */
            height: 80px;
            margin: 10px;
        }

            .nav-btn i {
                font-size: 20px;
                margin-bottom: 5px;
            }

            .nav-btn:hover {
                background-color: #006160;
                color: white;
                border-color: #006160;
                transform: scale(1.1);
            }

        .form-control2 {
            display: block;
            width: 100%;
            height: calc(1.5em + .75rem + 2px);
            padding: .375rem .75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #495057;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            border-radius: .25rem;
            transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
        }
        .arrow-button {
            position: fixed;
            top: 10px;
            left: 0; /* Đặt sát mép trái */
            width: 50px;
            height: 50px;
            background-color: white; /* Nền trắng */
            border: 2px solid black; /* Viền đen */
            border-radius: 50%; /* Bo tròn */
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: transform 0.3s ease, background-color 0.3s ease, border-color 0.3s ease;
            z-index: 1000; /* Đảm bảo nút luôn ở trên cùng */
        }

            .arrow-button:hover {
                border-color: #007bff; /* Viền đổi màu xanh khi hover */
                transform: scale(1.1); /* Phóng to nhẹ khi hover */
            }

            .arrow-button i {
                font-size: 20px;
                color: transparent; /* Mũi tên trong suốt */
                -webkit-text-stroke: 1px black; /* Viền mũi tên màu đen */
            }
    </style> @*Định dạng giao diện thôi nè đóng lại cho dễ nhìn action*@
</head>

<body>

    <a class="arrow-button" href="@Url.Action("Index","Home")" >
        <i class="bi bi-arrow-up"></i>
    </a>

    <div class="wrapper" style="background-image: url('/IMAGE/Banner4.jpg')">
        <div class="inner">
            <div class="image-holder">
                <img src="/IMAGE/HoaLe.jpg" alt="">
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <form>
                    <h3 style="font-family:cursive">Đăng Ký</h3>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-wrapper">
                        @*@Html.LabelFor(model => model.Name, "Họ và tên")*@
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập họ và tên" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-wrapper">
                        @*@Html.LabelFor(model => model.Address, "Địa chỉ")*@
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập địa chỉ" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-wrapper">
                        @*@Html.LabelFor(model => model.Email, "Email")*@
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-wrapper">
                        @*@Html.LabelFor(model => model.Phone, "Số điện thoại")*@
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số điện thoại" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-wrapper">
                        @*@Html.LabelFor(model => model.UserName, "Tên đăng nhập")*@
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên đăng nhập" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-wrapper">
                        @*@Html.LabelFor(model => model.Password, "Mật khẩu")*@
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mật khẩu", type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>

                    <button class="btn btn-outline-dark" type="submit" sty>Đăng Ký<i class="fa fa-arrow-right"></i></button>
                </form>
            }
        </div>
    </div>

    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/JAVASCRIPT/Animation.js"></script>
    <script src="~/JAVASCRIPT/NavScroll.js"></script>
</body>
</html>
