@model FlowersShop.Repository.Users

@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>FIREFLY STORE - ĐĂNG KÝ</title>

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/CSS/login.css">
    <link rel="stylesheet" href="~/CSS/Footerbar.css">
    <link rel="stylesheet" href="~/CSS/HeaderBar.css" />
    <link rel="stylesheet" href="~/CSS/Style.css" />
</head>

<body>
    <section>
        <div class="wrapper" style="background-image: url('/IMAGE/Banner4.jpg');">
            <div class="inner">
                <div class="image-holder">
                    <img src="/IMAGE/HoaLe.jpg" alt="Background Image">
                </div>

                <!-- Form bắt đầu -->
                @using (Html.BeginForm("DangNhap", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <h3>Đăng nhập</h3>
                    <!-- Tên đăng nhập -->
                    <div class="form-wrapper">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Tên đăng nhập" })
                        <i class="zmdi zmdi-account"></i>
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>

                    <!-- Mật khẩu -->
                    <div class="form-wrapper">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Mật khẩu" })
                        <i class="zmdi zmdi-lock"></i>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        @ViewBag.error
                    </div>
                    <!-- Nút đăng nhập -->
                    <button type="submit">
                        Đăng nhập
                        <i class="zmdi zmdi-arrow-right"></i>
                    </button>
                }
            </div>
        </div>
    </section>
    <!-- Scripts -->
    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/JAVASCRIPT/Animation.js"></script>
    <script src="~/JAVASCRIPT/NavScroll.js"></script>*@
</body>
</html>
